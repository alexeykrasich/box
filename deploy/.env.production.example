# Production Environment Configuration
# Copy this file to .env on your server and configure

# Security - REQUIRED
SECRET_KEY=generate-a-secure-32-character-key
API_KEY=your-production-api-key

# Authentication
API_KEY_REQUIRED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# CORS - Set to your app's domain
CORS_ORIGINS=*

# Server
HOST=0.0.0.0
PORT=5000
DEBUG=false

# SSL/TLS (optional - recommended to use reverse proxy like nginx)
# SSL_CERT=/path/to/cert.pem
# SSL_KEY=/path/to/key.pem

