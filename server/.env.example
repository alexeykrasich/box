# Automation Control System - Environment Configuration
# Copy this file to .env and configure your settings

# ==============================================================================
# REQUIRED FOR PRODUCTION
# ==============================================================================

# Secret key for session signing - MUST be set in production
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# API authentication key - required for all API calls when API_KEY_REQUIRED=true
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
API_KEY=your-api-key-here-change-in-production

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================

# Require API key for all requests (recommended: true for production)
API_KEY_REQUIRED=true

# Rate limiting (requests per minute per IP)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# CORS allowed origins (comma-separated, use * for development only)
# Example: https://app.example.com,https://admin.example.com
CORS_ORIGINS=*

# ==============================================================================
# TLS/SSL (HTTPS)
# ==============================================================================

# Path to SSL certificate and key for HTTPS
# Uncomment and set paths for HTTPS support
# SSL_CERT=/path/to/certificate.pem
# SSL_KEY=/path/to/private-key.pem

# ==============================================================================
# SERVER SETTINGS
# ==============================================================================

# Server host and port
HOST=0.0.0.0
PORT=5000

# Debug mode (NEVER enable in production)
DEBUG=false

